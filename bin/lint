#!/usr/bin/env ruby

require_relative '../lib/check_file.rb'
require_relative '../lib/logic.rb'
# rubocop: disable Style/MixinUsage
include Linter
# rubocop: enable Style/MixinUsage

path = ARGV[0]
file_validation = FileCheck.new(path)

file_validation.to_exit?

new_check = Check.new(path)

p new_check.lines.size

p new_check.lines

new_check.trailing_spaces
p new_check.trailing

new_check.indentation_two

p new_check.indentation

new_check.indentation_first

p new_check.indentation

new_check.indentation_last

p new_check.indentation

new_check.indentation_vertical

p new_check.indentation

